@using DoAn.Models;
@model SanPham


@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}







    <h1 style="text-align: center;">Chi Tiết Sản Phẩm: </h1>
    <div id="HinhAnh">
        <img src="@Url.Content("~/HinhAnh/AnhSP/Rau/"+ Model.AnhBia)" />
    </div>

    <!-- Thông Tin -->
    <div id="ThongTin">
        <div id="TenSP">Tên Sản Phẩm: @Model.TenSP</div>
        <div id="ChuDe">Chủ Đề: @Model.LoaiSanPham.TenLoaiThucPham</div>
        <div id="nsx">Nhà Xuất Bản: @Model.XuatXu.TenNSX</div>
        <div id="MoTa">Giới Thiệu: @Model.MoTa</div>
        <div id="GiaSP"><span style="color:green; font-weight:normal; ">Đơn Giá: </span>@Model.GiaBan VNĐ/KG </div>


        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSP = Model.MaSP, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" style="cursor:pointer" value="Mua Hàng &#xf07a;" id="btnGioHang" class="btn btn-primary">
        }


    </div>
    <div style="clear:both"></div>


<style>
    #HinhAnh {
        float: left;
        width: 450px;
        height: 400px;
        border: none;
    }

    #ThongTin {
        float: left;
        width: 400px;
        height: 400px;
        padding: 5px 15px 15px 5px;
        color: black;
        font-family: 'Segoe UI';
        font-size: 17pt;
        font-weight: 400;
        border:none;
    }
        #ThongTin div {
            padding:15px;
            height: 40px;
            margin-left: 5px;
            text-align: left;
        }
    #TenSP{
        font-weight:normal;
        font-size:20pt;
        height:auto;
        word-wrap:break-word;
        color:red;
    }


    #ChuDe, #nsx{
        font-size:16pt;
        font-weight:normal;
        color:black;
    }
    #MoTa{
        color:black;
        height:auto;
    }
    #btnGioHang{
        font-family:'FontAwesome','Segoe UI';
        background-color:green;
    }
    #GiaSP:hover{
        color:red;
    }
    #btnGioHang:hover{

        background-color:red;
    }

</style>


