@using DoAn.Models;
@model List<SanPham>
<link href="~/Content/UserCssLayout/TrangChu.css" rel="stylesheet" />

@{
    ViewBag.Title = "SanPhamTheoNSX";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}




@if (Model.Count == 0)
{
    <h1>KHÔNG CÓ SẢN PHẨM THUỘC LOẠI NÀY</h1>
}

@{int i = 0;}
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia">
            <img src="@Url.Content("~/HinhAnh/AnhSP/Rau/"+item.AnhBia)" width="200" height="200" />
        </div>


        <div id="ThongTin">
            <div id="TenSP">Sản Phẩm: @item.TenSP  </div>

            <div id="GiaSP">Giá:<a>@item.GiaBan</a> </div>
        </div>
    </div>


    if (i % 4 == 0)
    {
        <div style="clear:both"></div>

    }


}